{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "assets": [
    {
      "include": "email/templates/**/*",
      "outDir": "dist/src/email/templates"
    },
    {
      "include": "errors/messages/**/*.json",
      "outDir": "dist/src/errors/messages"
    }
  ]
}
